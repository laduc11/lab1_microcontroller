#include "global.h"

void init_light()
{
	run_state(red);
}
void toggle_green()
{
	HAL_GPIO_TogglePin(LED_GREEN_GPIO_Port, LED_GREEN_Pin);
}
void togle_yellow()
{
	HAL_GPIO_TogglePin(LED_YELLOW_GPIO_Port, LED_YELLOW_Pin);;
}
void toggle_red()
{
	HAL_GPIO_TogglePin(LED_RED_GPIO_Port, LED_RED_Pin);;
}
void run_state(COLOR)
{
	switch(COLOR)
	{
	case red:
		break;
	case yellow:
			break;
	case green:
			break;
	default:
			break;
	}
}
